{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },

    "content_scripts": [
        {
            "js": [ "common.js","baidu-content.js"],
            "matches": [ "*://*.baidu.com/*" ],
            "exclude_globs":[ "*://tieba.baidu.com/*" ],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","tieba-content.js"],
            "matches": [ "*://tieba.baidu.com/*" ],
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","redirect.js"],
            "matches": [ "*://zhuanlan.zhihu.com/R_E_D_I_R_E_C_T/*","*://*.xiaohongshu.com/R_E_D_I_R_E_C_T/*"],
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","xhs-content.js"],
            "matches": [ "*://*.xiaohongshu.com/*" ],
            "exclude_globs":[ "*://*.xiaohongshu.com/R_E_D_I_R_E_C_T/*" ],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","sohu-content.js"],
            "matches": [ "*://*.sohu.com/*" ],
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","google-content.js"],
            "matches": [ "*://*.google.com/*" ],
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","csdn-content.js"],
            "matches": [ "*://*.csdn.net/*" ],
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","jianshu-content.js"],
            "matches": [ "*://*.jianshu.com/*" ],
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","toutiao-content.js"],
            "matches": [ "*://*.toutiao.com/*" ],
            "run_at": "document_start"
        },
        {
            "js": [ "common.js","zhihu-content.js"],
            "matches": [ "*://*.zhihu.com/*" ],
            "exclude_globs":[ "*://zhuanlan.zhihu.com/R_E_D_I_R_E_C_T/*" ],
            "run_at": "document_start"
        }
    ],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/toolbar-icon-16.png",
            "19": "images/toolbar-icon-19.png",
            "32": "images/toolbar-icon-32.png",
            "38": "images/toolbar-icon-38.png"
        }
    },
    
    "web_accessible_resources": ["*"],
    "permissions": ["<all_urls>"]
}
